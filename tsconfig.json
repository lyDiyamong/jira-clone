{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": false, // Ensures TypeScript emits files for type-checking
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node", // Changed from "bundler" to "node"
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "noEmitOnError": false,
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
